{
  "functional_tests": [
    {
      "category": "URL Input & Validation",
      "tests": [
        {
          "test": "Empty URL submission",
          "steps": [
            "Navigate to /campaign/new",
            "Leave URL field empty",
            "Click 'Analyze Product'"
          ],
          "expected": "Should show validation error",
          "severity": "medium"
        },
        {
          "test": "Invalid URL format",
          "steps": [
            "Enter 'not-a-url'",
            "Submit form"
          ],
          "expected": "Should show URL format error",
          "severity": "medium"
        },
        {
          "test": "Non-Amway URL",
          "steps": [
            "Enter 'https://www.google.com'",
            "Submit form"
          ],
          "expected": "Should show 'must be Amway URL' error",
          "severity": "high"
        },
        {
          "test": "Valid Amway URL",
          "steps": [
            "Enter 'https://www.amway.com/en_US/p/nutrilite-double-x-vitamin-mineral-phytonutrient-supplement-p-100291'",
            "Submit"
          ],
          "expected": "Should successfully scrape and show product info",
          "severity": "critical"
        },
        {
          "test": "Rate limiting test",
          "steps": [
            "Submit multiple URLs rapidly (>5 requests in 60 seconds)"
          ],
          "expected": "Should show rate limit error after threshold",
          "severity": "medium"
        }
      ]
    },
    {
      "category": "Product Scraping",
      "tests": [
        {
          "test": "Product information extraction",
          "steps": [
            "Use valid Amway URL",
            "Verify extracted data"
          ],
          "expected": "Should show product name, description, price, image",
          "severity": "critical"
        },
        {
          "test": "Caching behavior",
          "steps": [
            "Scrape same URL twice within 24 hours"
          ],
          "expected": "Second request should return cached data quickly",
          "severity": "medium"
        },
        {
          "test": "Invalid product page",
          "steps": [
            "Use Amway URL that doesn't exist"
          ],
          "expected": "Should show appropriate error message",
          "severity": "medium"
        }
      ]
    },
    {
